{
    "gpu_device":"0,1",  
    "exp_folder": "exps",
    "run_mode": "test",
    "test": {
      "tester": "BaseTester",
      "model_path": "model_best_loss.pth"
    },
    "train": {
      "trainer": "raLSGANTrainer",
      "save_name": "split2",
      "epochs": 1900,
      "save_interval": 100,
      "early_stop": 10,
      "pretrain": true,
      "n_pretrain_epochs":100,
      "load_pretrained": false,
      "pretrained_model_path": "",
      "adv_loss_weight":0.0005,

      "gen_optimizer": {
        "type": "AdamW",
        "args": {
          "lr": 0.0001
        }
      },
      "disc_optimizer": {
        "type": "AdamW",
        "args": {
          "lr": 0.00001
        }
      },
      "gen_lr_scheduler": {
        "type": "StepLR",
        "args": {
          "step_size": 5000,
          "gamma": 0.5
        }
      },
      "disc_lr_scheduler": {
        "type": "StepLR",
        "args": {
          "step_size": 5000,
          "gamma": 0.5
        }
      }
    },
    "losses": [
      {
        "weight": 1.0,
        "type": "L1Loss",
        "args": null
      },
      {
        "weight": 5.0,
        "type": "GradientLoss",
        "args": null
      }
    ],
    "models": [
      {
        "type": "DenseUNet",
        "args": {
          "in_channels": 7,
          "nb_classes": 1,
          "init_conv_size": 3,
          "init_conv_filters": 48,
          "init_conv_stride": 1,
          "down_blocks": [
            4,
            4,
            4,
            4
          ],
          "bottleneck_layers": 4,
          "up_blocks": [
            4,
            4,
            4,
            4
          ],
          "growth_rate": 12,
          "compression": 1.0,
          "dropout_rate": 0.2,
          "upsampling_type": "pixelshuffle_blur",
          "early_transition": false,
          "transition_pooling": "max",
          "batch_norm": "batchnorm",
          "include_top": true,
          "efficient": false
        }
      },
      {
        "type": "NLayerDiscriminator",
        "args": {
            "input_nc":8, 
            "ndf":32, 
            "n_layers":4
        }
      }
    ],
    "data": {
      "dataset": "FastBaseDataset",
      "folder": "/mnt/hdd2/datasets/astra_data_readonly/astra_data_readonly",
      "train_csv_file": "exp_stats/ablation_train_split_2.csv",
      "valid_csv_file": "exp_stats/ablation_valid_split_2.csv",
      "test_csv_file": "exp_stats/final_test_all.csv",
      "magnification": "60x",
      "output_channel": "C2",
      "batch_size": 4,
      "shuffle": true,
      "standardize": false,
      "normalize": true,
      "augmentations": [
        {
          "type": "RandomCrop",
          "args": {
            "height": 512,
            "width": 512,
            "always_apply": true,
            "p": 1.0
          }
        },
        {
          "type": "HorizontalFlip",
          "args": {
            "p": 0.5
          }
        },
        {
          "type": "VerticalFlip",
          "args": {
            "p": 0.5
          }
        },
        {
          "type": "RandomRotate90",
          "args": {
            "p": 0.5
          }
        }
      ]
    }
  }